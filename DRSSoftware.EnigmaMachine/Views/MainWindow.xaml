<Window
    x:Class="DRSSoftware.EnigmaMachine.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DRSSoftware.EnigmaMachine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DRSSoftware.EnigmaMachine.ViewModels"
    Title="Enigma V2"
    Width="800"
    Height="600"
    MinWidth="750"
    MinHeight="450"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModelDT,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Border
        Padding="10"
        Background="Black"
        BorderBrush="{StaticResource borderBrush}"
        BorderThickness="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Input  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource headerTextStyle}"
                Text="Input" />
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,10,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <TextBox Style="{StaticResource inputOutputTextStyle}" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" />
            </ScrollViewer>
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="5,10,5,0"
                    Command="{Binding LoadCommand}"
                    Content="Load"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    Grid.Column="1"
                    Margin="5,10,5,0"
                    Command="{Binding DecloakCommand}"
                    Content="De-cloak"
                    Style="{StaticResource buttonStyle}" />
            </Grid>

            <!--  Control  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource headerTextStyle}"
                Text="Control" />
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="1"
                    Margin="5"
                    Command="{Binding EncryptCommand}"
                    Content="--&gt; Encrypt --&gt;"
                    Style="{StaticResource buttonStyle}" />
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="5,10,5,0"
                    Command="{Binding ConfigureCommand}"
                    Content="Configure"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    Grid.Column="2"
                    Margin="5,10,5,0"
                    Command="{Binding ResetCommand}"
                    Content="Reset"
                    Style="{StaticResource buttonStyle}" />
            </Grid>

            <!--  Output  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Style="{StaticResource headerTextStyle}"
                Text="Output" />
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,0,10,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <TextBox Style="{StaticResource inputOutputTextStyle}" Text="{Binding OutputText, UpdateSourceTrigger=PropertyChanged}" />
            </ScrollViewer>
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="1"
                    Margin="5,10,5,0"
                    Command="{Binding CloakCommand}"
                    Content="Cloak"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    Grid.Column="2"
                    Margin="5,10,5,0"
                    Command="{Binding SaveCommand}"
                    Content="Save"
                    Style="{StaticResource buttonStyle}" />
            </Grid>
        </Grid>
    </Border>
</Window>
