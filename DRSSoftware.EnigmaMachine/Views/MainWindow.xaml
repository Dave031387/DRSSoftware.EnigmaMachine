<Window
    x:Class="DRSSoftware.EnigmaMachine.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DRSSoftware.EnigmaMachine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DRSSoftware.EnigmaMachine.ViewModels"
    Title="Enigma V2"
    Width="800"
    Height="610"
    MinWidth="800"
    MinHeight="610"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModelDT,
                                     IsDesignTimeCreatable=True}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border
        Padding="10"
        Background="Black"
        BorderBrush="{StaticResource borderBrush}"
        BorderThickness="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Input  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource headerTextBlockStyle}"
                Text="Input" />
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,10,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <TextBox Style="{StaticResource readonlyTextBoxStyle}" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" />
            </ScrollViewer>
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="5,10,5,0"
                    Command="{Binding LoadCommand}"
                    Content="Load"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    Grid.Column="1"
                    Margin="5,10,5,0"
                    Command="{Binding DecloakCommand}"
                    Content="De-cloak"
                    Style="{StaticResource buttonStyle}" />
            </Grid>

            <!--  Control  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource headerTextBlockStyle}"
                Text="Control" />
            <DockPanel
                Grid.Row="1"
                Grid.Column="1"
                LastChildFill="True">
                <Button
                    Margin="5"
                    Command="{Binding EncryptCommand}"
                    Content="--&gt; Encrypt --&gt;"
                    DockPanel.Dock="Top"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    Margin="5"
                    Command="{Binding MoveCommand}"
                    Content="&lt;-- Move to Input &lt;--"
                    DockPanel.Dock="Bottom"
                    Style="{StaticResource buttonStyle}" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="1">
                        <StackPanel Margin="5" Style="{StaticResource propertiesPanelStyle}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Number of Rotors: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding NumberOfRotors}" />
                        </StackPanel>
                        <StackPanel Margin="5,5,5,0" Style="{StaticResource propertiesPanelStyle}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #1: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex1}" />
                        </StackPanel>
                        <StackPanel Margin="5,0" Style="{StaticResource propertiesPanelStyle}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #2: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex2}" />
                        </StackPanel>
                        <StackPanel Margin="5,0" Style="{StaticResource propertiesPanelStyle}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #3: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex3}" />
                        </StackPanel>
                        <StackPanel
                            Margin="5,0"
                            Style="{StaticResource propertiesPanelStyle}"
                            Visibility="{Binding IsRotor4Visible, Converter={StaticResource boolToVisibilityConverter}}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #4: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex4}" />
                        </StackPanel>
                        <StackPanel
                            Margin="5,0"
                            Style="{StaticResource propertiesPanelStyle}"
                            Visibility="{Binding IsRotor5Visible, Converter={StaticResource boolToVisibilityConverter}}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #5: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex5}" />
                        </StackPanel>
                        <StackPanel
                            Margin="5,0"
                            Style="{StaticResource propertiesPanelStyle}"
                            Visibility="{Binding IsRotor6Visible, Converter={StaticResource boolToVisibilityConverter}}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #6: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex6}" />
                        </StackPanel>
                        <StackPanel
                            Margin="5,0"
                            Style="{StaticResource propertiesPanelStyle}"
                            Visibility="{Binding IsRotor7Visible, Converter={StaticResource boolToVisibilityConverter}}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #7: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex7}" />
                        </StackPanel>
                        <StackPanel
                            Margin="5,0"
                            Style="{StaticResource propertiesPanelStyle}"
                            Visibility="{Binding IsRotor8Visible, Converter={StaticResource boolToVisibilityConverter}}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Rotor Index #8: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding RotorIndex8}" />
                        </StackPanel>
                        <StackPanel Margin="5,0,5,5" Style="{StaticResource propertiesPanelStyle}">
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="Reflector Index: " />
                            <TextBlock Style="{StaticResource propertyTextBlockStyle}" Text="{Binding ReflectorIndex}" />
                        </StackPanel>
                        <StackPanel Margin="5,5,5,0" Style="{StaticResource propertiesPanelStyle}">
                            <Rectangle
                                Width="16"
                                Height="16"
                                Margin="10"
                                Fill="{Binding IsConfigured, Converter={StaticResource boolToStatusBrushConverter}}"
                                Stroke="{StaticResource lightTextBrush}"
                                StrokeThickness="1" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource propertyTextBlockStyle}"
                                Text="{Binding ConfigurationStatus}" />
                        </StackPanel>
                        <StackPanel Margin="5,0,5,10" Style="{StaticResource propertiesPanelStyle}">
                            <TextBlock
                                Grid.Column="1"
                                FontStyle="Italic"
                                Style="{StaticResource propertyTextBlockStyle}"
                                Text="== Embedded Config =="
                                Visibility="{Binding UseEmbeddedConfiguration, Converter={StaticResource boolToVisibilityConverter}}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DockPanel>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="5,10,5,0"
                    Command="{Binding ConfigureCommand}"
                    Content="Configure"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    Grid.Column="2"
                    Margin="5,10,5,0"
                    Command="{Binding ResetCommand}"
                    Content="Reset"
                    Style="{StaticResource buttonStyle}" />
            </Grid>

            <!--  Output  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Style="{StaticResource headerTextBlockStyle}"
                Text="Output" />
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,0,10,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <TextBox Style="{StaticResource readonlyTextBoxStyle}" Text="{Binding OutputText, UpdateSourceTrigger=PropertyChanged}" />
            </ScrollViewer>
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="1"
                    Margin="5,10,5,0"
                    Command="{Binding CloakCommand}"
                    Content="Cloak"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    Grid.Column="2"
                    Margin="5,10,5,0"
                    Command="{Binding SaveCommand}"
                    Content="Save"
                    Style="{StaticResource buttonStyle}" />
            </Grid>
        </Grid>
    </Border>
</Window>
