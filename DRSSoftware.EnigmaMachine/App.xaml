<Application
    x:Class="DRSSoftware.EnigmaMachine.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DRSSoftware.EnigmaMachine">
    <Application.Resources>
        <!--  Color Resources  -->
        <Color x:Key="darkColor">#FF320032</Color>
        <Color x:Key="headerTextColor">White</Color>
        <Color x:Key="lightColor">#FFF0A4F0</Color>
        <Color x:Key="mediumColor">#FFC432C4</Color>
        <Color x:Key="textBoxBackgroundColor">#FFB4DCBC</Color>
        <!--  Brush Resources  -->
        <SolidColorBrush x:Key="buttonBackgroundBrush" Color="{StaticResource lightColor}" />
        <SolidColorBrush x:Key="darkBrush" Color="{StaticResource darkColor}" />
        <SolidColorBrush x:Key="headerTextBrush" Color="{StaticResource headerTextColor}" />
        <SolidColorBrush x:Key="textBoxBackgroundBrush" Color="{StaticResource textBoxBackgroundColor}" />
        <LinearGradientBrush x:Key="borderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0.03" Color="{StaticResource darkColor}" />
            <GradientStop Offset="1" Color="{StaticResource mediumColor}" />
        </LinearGradientBrush>
        <!--  Text Styles  -->
        <Style x:Key="headerTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{StaticResource headerTextBrush}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
        <Style x:Key="inputOutputTextStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{StaticResource textBoxBackgroundBrush}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="editableTextStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{StaticResource textBoxBackgroundBrush}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="IsReadOnly" Value="false" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <!--  Button Styles  -->
        <Style x:Key="buttonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource buttonBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource darkBrush}" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{StaticResource darkBrush}" />
            <Setter Property="Padding" Value="10,5" />
        </Style>
    </Application.Resources>
</Application>
